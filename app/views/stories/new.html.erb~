<div style="margin-top: 2em">
<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div><br />
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area(:body, :class => 'mceEditor',  'style' => 'width:700px;height:500px') %><div>
  </div><br />
  <div class="field">
    <%= f.label :category %><br />
    <%= f.select :category, @categories %>
  </div><br />
  <div class="field">
    Upload a picture, preferably large ones since it will be resized and cropped<br />
    <%= f.file_field :newspic %>
    <%= f.hidden_field :newspic_cache %>
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
